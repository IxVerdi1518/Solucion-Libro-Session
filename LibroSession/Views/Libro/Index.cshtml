@model List<Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Libros</h1>
<a asp-controller="Libro" asp-action="Create" class="btn float-end btn-primary" width="10">Crear</a>
<br />
<br />
<div class="contairner">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Titulo</td>
                        <td>Autor</td>
                        <td>Materia</td>
                        <td>Estado</td>
                        <td>Tipo</td>
                        <td>Categoria por edad</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Autor</td>
                            <td>@item.Titulo</td>
                            <td>@item.Materia</td>
                            <td>@item.Estado</td>
                            <td>@item.Tipo</td>
                            <td>@item.Categoria</td>
                            <td>


                                <a asp-controller="Libro" asp-action="Delete" asp-route-titulo="@item.Titulo" class="btn float-end btn-primary" witdh="10">Eliminar</a>
                                <a asp-controller="Libro" asp-action="Edit" asp-route-titulo="@item.Titulo" class="btn float-end btn-primary" witdh="10">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existe registros</p>
        }
    </div>
</div>
