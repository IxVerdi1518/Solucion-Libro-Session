@model Libro
@{
    ViewData["Title"] = "Crear";
}

<div class="contairner">
    <h3>
        Crear Libros
    </h3>
    <br />
</div>


<div class="contairner">
    <div class="row">
        <div class="col-sm-8">
            <form method="post" asp-controller="Libro" asp-action="Guardar">
                <div class="form-group">
                    <label asp-for="Autor" class="control-label"></label>
                    <input asp-for="Autor" class="form-control" />
                </div>
                <div class="form-group">

                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Materia" class="control-label"></label>
                    <input asp-for="Materia" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <input asp-for="Tipo" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <input asp-for="Categoria" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
